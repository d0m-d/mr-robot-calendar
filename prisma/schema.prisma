generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Episode {
  id              Int         @id
  title           String
  watchDate       String
  startDate       String
  endDate         String
  events          Event[]
}

model DrinkingCue {
  id              String      @id @default(uuid())
  cue             String
  type            String
  notes           String?
  user            User? @relation(fields: [user_id], references: [id])
  user_id         String?
}

model Event {
  id              String      @id @default(uuid())
  event           String
  notes           String?
  date            String
  dayOfWeek       String
  timeOfDay       String
  episode         Episode     @relation(fields: [episodeId], references: [id])
  episodeId       Int
  flashback       Boolean?
  future          Boolean?
}

model User {
  id              String @id @default(uuid())
  username        String   @unique
  passwordHash    String
  drinkingCues    DrinkingCue[]
}

model ScreeningQuestions {
  id              String  @id @default(uuid())
  question        String
  answer          String
}