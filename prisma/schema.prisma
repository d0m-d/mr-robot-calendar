generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Episode {
  id          Int       @id
  title       String
  watchDate   String
  startDate   String
  endDate     String
  events      Event[]
}

model DrinkingCue {
  id        String    @id @default(uuid())
  cue       String
  type      String
  notes     String?
}

model Event {
  id        String  @id @default(uuid())
  event     String
  notes     String?
  date      String
  dayOfWeek String
  timeOfDay String
  episode   Episode @relation(fields: [episodeId], references: [id])
  episodeId Int
}